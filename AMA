SEPARATEWINDOW=false
INPUTS={ "Period,10",
         "FastEMA,2",
         "SlowEMA,30",
         "PriceType,1"}
BUFFERSNAME={"ama"}
BUFFERSCOLOR={ClrGreen}
BUFFERSTYPE={DRAW_LINE}
DESCRIPTION={"Adaptive Moving Average - PriceType can be CLOSE=0 OPEN=1 HIGH=2 LOW=3 MEDIAN=4 TYPICAL=5 WEIGHTED=6"}

function calc()
  ama=AMA(PriceType,Period,FastEMA,SlowEMA)
end





