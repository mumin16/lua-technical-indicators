SEPARATEWINDOW=true
INPUTS={ "period,14",
         "pricetype,0"}
BUFFERSNAME={"trix"}
BUFFERSCOLOR={ClrGreen}
BUFFERSTYPE={DRAW_LINE}
LEVELS={0}
DESCRIPTION={"Triple Exponential Average - pricetype can be CLOSE=0 OPEN=1 HIGH=2 LOW=3 MEDIAN=4 TYPICAL=5 WEIGHTED=6"}

function calc()
  trix=TRIX(pricetype,period)
end





