SEPARATEWINDOW=true
INPUTS={ "period,14",
				  "pricetype,0"}
BUFFERSNAME={"rsi"}
BUFFERSCOLOR={ClrGreen}
BUFFERSTYPE={DRAW_LINE}
DESCRIPTION={"pricetype can be CLOSE=0 OPEN=1 HIGH=2 LOW=3 MEDIAN=4 TYPICAL=5 WEIGHTED=6"}
LEVELS={30,70}

function calc()
  rsi=RSI(pricetype,period)
end





